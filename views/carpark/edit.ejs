<h1>Edit Carpark</h1>
<div class="row">
	<div class="col">
		<form action="/carpark/edit/<%= carpark._id %>?_method=PUT" method="post">
			<div class="form-group">
				<input name="name" type="text" class="form-control" placeholder="Carpark Name" value="<%= carpark.name %>">
			</div>
			<div class="form-group">
				<input name="location" type="text" class="form-control" placeholder="Carpark Location" value="<%= carpark.location %>">
			</div>
			<div class="form-group">
				<input name="capacity" type="number" class="form-control" placeholder="Carpark capacity" value="<%= carpark.capacity %>">
			</div>
			<button class="btn btn-primary btn-block">Edit Carpark</button>
		</form>
	</div>
</div>